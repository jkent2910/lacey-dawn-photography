<div class="container dashboard-container">
  <h2><%= @client.first_name %> <%= @client.last_name %></h2>
  <h3><%= @client.session_name %></h3>

  <h3>Pictures</h3>
  <div class="row">
    <% @pictures.each do |p| %>
        <div class="col-md-4">
          <%= image_tag(p.image, class: 'img-responsive img-thumbnail') %>
          <% if p.favorite? %>
              <p><%= fa_icon("heart", class: "fa-heart-color") %></p>
          <% end %>
        </div>
    <% end %>
  </div>
  <div class="row"><br />
    <div class="col-md-12">
      <% if current_user.admin? %>
          <%= link_to "Add More Photos", edit_client_path(@client), class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>

</div>
